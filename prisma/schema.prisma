generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model visitante {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  visits       visita[]
  phone        String? @unique
  gender       String?
  age          Int?
  address      String?
  cityAndState String?
  religion     String?
  smallGroup   String?
  bibleStudy   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model visita {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  visitDate   String?
  visitanteId String?    @db.ObjectId
  visitante   visitante? @relation(fields: [visitanteId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

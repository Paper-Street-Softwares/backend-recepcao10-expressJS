generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model visitante {
  id           String   @id @default(uuid())
  visits       visita[]
  visitsCount  Int?
  name         String?
  phone        String?
  address      String?
  cityAndState String?
  age          String?
  gender       String?
  religion     String?
  smallGroup   String?
  bibleStudy   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model visita {
  id          String     @id @default(uuid())
  visitDate   String?
  visitante   visitante? @relation(fields: [visitanteId], references: [id])
  visitanteId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

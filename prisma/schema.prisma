generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model visitante {
  id           String   @id @default(uuid())
  name         String?
  phone        String?
  gender       String?
  age          Int?
  address      String?
  cityAndState String?
  religion     String?
  smallGroup   String?
  bibleStudy   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  visitsCount  Int?     @default(1)
  visits       visita[]
}

model visita {
  id          String     @id @default(uuid())
  visitDate   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  visitanteId String?
  visitante   visitante? @relation(fields: [visitanteId], references: [id])
}

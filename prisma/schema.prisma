generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model visitante {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  phone        String?
  gender       String?
  age          Int?
  address      String?
  cityAndState String?
  religion     String?
  smallGroup   String?
  bibleStudy   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  visitsCount  Int?     @default(1)
  visits       visita[]
}

model visita {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  visitDate   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  visitanteId String?    @db.ObjectId
  visitante   visitante? @relation(fields: [visitanteId], references: [id])
}
